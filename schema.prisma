datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(uuid()) @postgresql.Uuid
  phone    String @default("")
  email    String @unique @default("")
  password String
  owner    Owner? @relation("Owner_user")
  pets     Pet[]  @relation("Pet_owner")
}

model Owner {
  id       String   @id @default(uuid()) @postgresql.Uuid
  user     User?    @relation("Owner_user", fields: [userId], references: [id])
  userId   String?  @unique @map("user") @postgresql.Uuid
  name     String   @default("")
  lastName String   @default("")
  birthDay DateTime
}

model Pet {
  id      String  @id @default(uuid()) @postgresql.Uuid
  name    String  @default("")
  owner   User?   @relation("Pet_owner", fields: [ownerId], references: [id])
  ownerId String? @map("owner") @postgresql.Uuid

  @@index([ownerId])
}

model Breed {
  id   String @id @default(uuid()) @postgresql.Uuid
  name String @default("")
}