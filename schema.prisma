datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(uuid()) @postgresql.Uuid
  phone    String @default("")
  email    String @unique @default("")
  password String
  owner    Owner? @relation("Owner_user")
  pets     Pet[]  @relation("Pet_owner")
}

model Owner {
  id       String   @id @default(uuid()) @postgresql.Uuid
  user     User?    @relation("Owner_user", fields: [userId], references: [id])
  userId   String?  @unique @map("user") @postgresql.Uuid
  name     String   @default("")
  lastName String   @default("")
  birthDay DateTime
}

model Pet {
  id      String     @id @default(uuid()) @postgresql.Uuid
  name    String     @default("")
  owner   User?      @relation("Pet_owner", fields: [ownerId], references: [id])
  ownerId String?    @map("owner") @postgresql.Uuid
  breed   Breed?     @relation("Pet_breed", fields: [breedId], references: [id])
  breedId String?    @map("breed") @postgresql.Uuid
  images  PetImage[] @relation("Pet_images")

  @@index([ownerId])
  @@index([breedId])
}

model PetImage {
  id              String @id @default(uuid()) @postgresql.Uuid
  image           Json?
  from_Pet_images Pet[]  @relation("Pet_images")
}

model Breed {
  id             String @id @default(uuid()) @postgresql.Uuid
  name           String @default("")
  description    String @default("")
  from_Pet_breed Pet[]  @relation("Pet_breed")
}